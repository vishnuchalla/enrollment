<p style="color: green"><%= notice %></p>

<h1>Instructors</h1>

<div id="instructors">
  <% @instructors.each do |instructor| %>
    <% if current_user.email == instructor.email %>
      <%= render instructor %>
      <p>
      <%= link_to "Show this instructor", instructor, {:class => "link-dark"}  %>
      </p>
    <% end %>
  <% end %>

</div>

<% if current_user.user_type != "instructor" %>
  <%= link_to "New instructor", new_instructor_path {:class => "link-dark"} %>
<% end %>