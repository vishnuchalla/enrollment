<% if flash[:alert] %>
  <div id="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password %>
  </div>
  <br>
  <div class="actions" >
    <%= submit_tag "Login", {:class => "btn btn-outline-success"} %>
  </div>
<% end %>