<%= form_with(model: waitlist) do |form| %>
  <% if waitlist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(waitlist.errors.count, "error") %> prohibited this waitlist from being saved:</h2>

      <ul>
        <% waitlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user.user_type != "instructor" %>
    <div class="field">
      <p> Course Code : <%=@course.Course_Code %> </p>
      <%= form.hidden_field :course_id, value: @course.id %>
      <input name="course_id" type="hidden" value="<%= params[:course_id] %>" />
    </div>

    <div class="field">
      <p> Student Email : <%= current_user.email %> </p>

      <%= form.hidden_field :student_id, value: @student_id %>
      <input name="student_id" type="hidden" value="<%= params[:student_id] %>" />
    </div>
  <%end %>

  <div>
    <%= form.submit "Join Waitlist", class: "btn btn-dark"%>
  </div>
<% end %>
